{% extends 'base.html.twig' %}

{% block title %}Licences{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm mt-3">

            <h1>Licences</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ licence.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ licence.title }}</td>
                    </tr>
                    <tr>
                        <th>Slug</th>
                        <td>{{ licence.slug }}</td>
                    </tr>
                </tbody>
            </table>

            <a class="btn btn-sm btn-primary" href="{{ path('licences_index') }}">Back to list</a>

            <a class="btn btn-sm btn-warning" href="{{ path('licences_edit', {'id': licence.id}) }}">Edit</a>

            {{ include('licences/_delete_form.html.twig') }}
        </div>
        {% block sidebar %}
            {{ sidebar() }}
        {% endblock %}
    </div>
{% endblock %}
