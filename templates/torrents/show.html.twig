{% extends 'base.html.twig' %}

{% block title %}Torrents{% endblock %}

{% block body %}
    <h1>{{ torrent.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Hash</th>
                <td>{{ torrent.hash }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td><a href="{{ torrent.link }}" target="_blank">{{ torrent.link }}</a></td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ torrent.content | raw}}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ torrent.size }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ torrent.date ? torrent.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>TorrentFile</th>
                <td>{{ torrent.torrentFile }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ torrent.image }}" alt="{{ torrent.title }}" class="img-fluid" style="max-width:125px;"></td>
            </tr>
            <tr>
                <th>Views</th>
                <td>{{ torrent.views }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-sm btn-primary" href="{{ path('torrents_index') }}">Back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-sm btn-warning" href="{{ path('torrents_edit', {'id': torrent.id}) }}">Edit</a>
        {{ include('torrents/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
