{{ form_start(form) }}
    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.pid) }}
    {{ form_row(form.avatar) }}
    {{ form_row(form.signature) }}

    {% if not is_granted('ROLE_ADMIN') %}
        {{ form_row(form.active, { 'disabled': true }) }}
        {{ form_row(form.isVerified, { 'disabled': true }) }}
    {% endif %}

    <div class="mt-3 d-flex justify-content-between">
        <button class="btn btn-success py-2 px-3">{{ button_label|default('Modifier') }}</button>
        <button type="reset" class="btn btn-secondary py-2 px-3">Annuler</button>
        <button class="btn btn-primary py-2 px-3">Demander un nouveau mot de passe</button>
    </div>
{{ form_end(form) }}
