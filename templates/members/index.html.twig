{% extends 'base.html.twig' %}

{% block title %}{{ site_url}}: liste des membres{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm mt-3">
            <h1>Liste des membres</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom d'utilisateur</th>
                        <th>Role</th>
                        <th>Date d'enregistrement</th>
                        {% if is_granted('ROLE_ADMIN') %}
                            <th>Actif</th>
                            <th>Compte vérifié</th>
                        {% endif %}
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for member in members %}
                    <tr>
                        <td>{{ member.id }}</td>
                        <td>{{ member.username }}</td>
                        <td>
                            {#{ member.roles ? member.roles|json_encode : '' }#}
                            {% if member.roles|json_encode == '["ROLE_USER"]' %}
                                <span class="text-primary fw-bold">Membre</span>
                            {% else %}
                                <span class="text-danger fw-bold">Admin</span>
                            {% endif %}
                        </td>
                        <td>{{ member.date ? member.date|format_datetime('medium', 'short', '', 'Europe/Paris', locale='fr') : '' }}</td>
                        {% if app.user %}
                            {% if (app.user.username == member.username) or (is_granted('ROLE_ADMIN')) %}
                                <td>{{ member.active ? 'Yes' : 'No' }}</td>
                                <td>{{ member.isVerified ? 'Yes' : 'No' }}</td>
                            {% endif %}
                        {% endif %}
                        <td>
                            <a class="btn btn-sm btn-info" href="{{ path('members_show', {'id': member.id}) }}"><i class="fas fa-eye"></i></a>
                            {% if app.user %}
                                {% if (app.user.username == member.username) or (is_granted('ROLE_ADMIN')) %}
                                    <a class="btn btn-sm btn-warning" href="{{ path('members_edit', {'id': member.id}) }}"><i class="fas fa-edit"></i></a>
                                {% endif %}
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="12">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
        {% block sidebar %}
            {{ sidebar() }}
        {% endblock %}
    </div>

{% endblock %}
