{% extends 'base.html.twig' %}

{% block title %}Members index{% endblock %}

{% block body %}
    <h1>Members index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Roles</th>
                <th>Date</th>
                <th>Active</th>
                <th>IsVerified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for member in members %}
            <tr>
                <td>{{ member.id }}</td>
                <td>{{ member.username }}</td>
                <td>
                    {#{ member.roles ? member.roles|json_encode : '' }#}
                    {% if member.roles|json_encode == '["ROLE_USER"]' %}
                        User
                    {% else %}
                        Admin
                    {% endif %}
                </td>
                <td>{{ member.date ? member.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ member.active ? 'Yes' : 'No' }}</td>
                <td>{{ member.isVerified ? 'Yes' : 'No' }}</td>
                <td>
                    <a class="btn btn-sm btn-info" href="{{ path('members_show', {'id': member.id}) }}">show</a>
                    <a class="btn btn-sm btn-warning" href="{{ path('members_edit', {'id': member.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-sm btn-success" href="{{ path('members_new') }}">Create new</a>
{% endblock %}
