{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!{% endblock %}

{% block body %}
<div class="row">
    <div class="col-sm mt-3">
        <h2>Faire une recherche</h2>

        <div class="form-group">
          {{ form_start(searchForm) }}
          {{ form_row(searchForm.title, {'label': 'La recherche s\'effectue sur le titre du torrent', 'id': 'search-titre', 'attr': {'placeholder': 'Entrez un mot clé', 'class': 'form-control'}})
          }}
          <button class="btn btn-success btn-sm mt-3">Rechercher</button>
          {{ form_end(searchForm) }}
        </div>

         {% if app.request.method == 'POST' %}
            <div id="result-search" class="mt-5">
                {% if torrents | length == 0 %}
                    <h5>Aucun résulat pour votre recherche <i class="fas fa-sad-tear"></i></h5>
                {% else %}
                    <h3 class="mt-3">Résulats de votre recherche :</h3>

                    {% for torrent in torrents %}
                        <div class="mt-3 py-3 px-3">
                            <a href="{{ path('torrents_show', {'slug': torrent.slug}) }}">
                                <h4 class="font-weight-bold text-dark">{{ torrent.title }}</h4>
                            </a>
                            <span class="badge badge-info p-2 rounded">Publié le {{ torrent.date | date('d/m/Y') }}</span>
                            {% for cat in torrent.category %}
                                <span class="badge badge-warning p-2 rounded">{{ cat.title }}</span>
                            {% endfor %}
                        </div>
                    {% endfor %}

                    <div class="pagination justify-content-center mt-5">
                        {{ knp_pagination_render(torrents) }}
                    </div>
                {% endif %}
            </div>
        {% endif %}
    </div>

    {% block sidebar %}
        {{ sidebar() }}
    {% endblock %}

</div>
{% endblock %}
