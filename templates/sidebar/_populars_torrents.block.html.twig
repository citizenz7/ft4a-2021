<div class="border border-dark rounded mt-3 ">
    <h6 class="bg-light py-2 ps-3">Torrents populaires</h6>
    <ul class="list-group list-group-flush" style="font-size:0.8rem; text-align: justify;">
        {% for t in torrents %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="fw-bold">
                        <a class="card-title text-dark text-decoration-none" href="{{ path('torrents_show', {'slug': t.slug}) }}">
                            {{ t.title | slice(0,32) }}
                        </a>
                    </span>
                <span class="badge rounded-pill bg-primary px-2 py-1">
                        {{ t.views }}
                    </span>
            </li>
        {% endfor %}
    </ul>
</div>
