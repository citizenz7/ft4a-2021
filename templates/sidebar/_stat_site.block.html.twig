<div class="border border-dark rounded mt-3">
    <h6 class="bg-light py-2 ps-3">Stats du site</h6>
    <ul class="list-group list-group-flush small">
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Membres inscrits
            <span class="badge bg-dark rounded-pill px-3">{{ members|length }}</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Inscriptions non valid√©es
            <span class="badge bg-danger rounded-pill px-3">???</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Nb de commentaires
            <span class="badge bg-success rounded-pill">{{ comments|length }}</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Nb de lectures
            <span class="badge bg-success rounded-pill">
                {% for view in views %}
                    {{ view.viewsTotal | number_format(0, '', ' ') }}
                {% endfor %}
            </span>
        </li>
    </ul>
</div>
