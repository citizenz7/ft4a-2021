{% extends 'base.html.twig' %}

{% block title %}{{ site_url }}: Mot de passe{% endblock %}

{% block body %}
    <div class="row mt-3">
        <h1>Modifier mon mot de passe</h1>
        <div class="col">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="mt-3">
                    <button class="btn btn-success py-2 float-end" type="submit">Modifier</button>
                    <a class="btn btn-secondary py-2 me-3 float-end" href="{{ path('member_profile') }}">Annuler</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
