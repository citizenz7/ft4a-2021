<!DOCTYPE html>
<html lang="en" class="h-100">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="author" content="{{ site_author }}">
        <meta name="generator" content="Symfony 5">
        <title>{% block title %}{{ site_url}}: {{ site_slogan }}{% endblock %}</title>
        <link rel="shortcut icon" type="image/png" href="{{ asset('img/logo.png') }}"/>

        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" integrity="sha512-HK5fgLBL+xu6dm/Ii3z4xhlSUyZgTT9tuc/hSrtw6uzJOvgRr2a9jyxxT1ely+B+xFAmJKVSTbpM/CuL7qxO8w==" crossorigin="anonymous" />
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}

    </head>

    <body class="d-flex flex-column h-100">

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container py-1">
                <a class="navbar-brand" href="{{ path('app_home') }}">ft4a.fr</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('app_home') }}">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('about') }}">About</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle active" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Torrents
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="{{ path('torrents_index') }}">List</a></li>
                                <li><a class="dropdown-item" href="{{ path('categories_index') }}">Categories</a></li>
                                <li><a class="dropdown-item" href="{{ path('licences_index') }}">Licences</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('members_index') }}">Members</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('contact') }}">Contact</a>
                        </li>
                    </ul>
                    {% if app.user %}
                        <div class="text-white">
                            Welcome <a class="text-white text-decoration-none" href="{{ path('members_show', {'id': app.user.id}) }}">{{ app.user.username }}!
                                <span class="badge rounded-pill bg-success">0</span>
                            </a>
                            <a href="{{ path('app_logout') }}" class="text-decoration-none badge bg-danger text-white py-1 px-2 ms-3 fs-6">Logout</a>
                    {% else %}
                            <a href="{{ path('app_register') }}" class="text-decoration-none badge bg-success text-white py-1 px-2 ms-3 fs-6">Register</a>
                            <a href="{{ path('app_login') }}" class="text-decoration-none badge bg-primary text-white py-1 px-2 ms-3 fs-6">Sign in</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </nav>

        <div class="container mt-4 pt-5 pb-3">
            {% block body %}{% endblock %}
        </div>

        {% block footer %}
            <footer class="footer mt-auto bg-dark">
                <div class="container">
                    <div class="row">
                        <div class="col text-center text-white pt-3 pb-2">
                            <i class="fas fa-home"></i> <a href="{{ path('app_home') }}">Home</a> |
                            <i class="fas fa-info"></i> <a href="#">About</a> |
                            <i class="far fa-envelope"></i>  <a href="#">Contact</a> |
                            <i class="fab fa-creative-commons-pd"></i> <a href="https://www.gnu.org/licenses/gpl-3.0.html">GPL v3</a>
                            <p class="footerMenu2">
                                &copy; 2021 |
                                <a href="{{ path('admin') }}">Administration</a> | Images <a href="https://pixabay.com/" target="_blank">Pixabay</a>
                            </p>
                        </div>
                    </div>
                </div>
            </footer>
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
